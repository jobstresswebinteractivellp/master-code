<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Userregistration"
    android:background="@drawable/sss">

    <EditText
        android:id="@+id/editText15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="     Userid"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark"
        tools:text="@string/edit15" />

    <EditText
        android:id="@+id/editText16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText15"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="      Name"
        android:inputType="textPersonName"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        tools:text="@string/edit16" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/editText24">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="143dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="MALE"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="visible"
            tools:text="@string/radio" />

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="157dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="FEMALE"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="visible"
            tools:text="@string/radio1" />
    </RadioGroup>

    <EditText
        android:id="@+id/editText17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText15"
        android:layout_below="@+id/editText16"
        android:ems="10"
        android:hint="      Age"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark"
        tools:text="@string/edit17" />

    <EditText
        android:id="@+id/editText18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText19"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="     Adress"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark"
        tools:text="@string/edit18" />

    <EditText
        android:id="@+id/editText19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText20"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="     Phone"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark"
        tools:text="@string/edit19" />

    <EditText
        android:id="@+id/editText20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="101dp"
        android:ems="10"
        android:hint="     Email"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark"
        tools:text="@string/edit20" />

    <EditText
        android:id="@+id/editText21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:hint="     Username"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark"
        tools:text="@string/edit21" />

    <EditText
        android:id="@+id/editText22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:hint="     Password"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark"
        tools:text="@string/edit22" />

    <Button
        android:id="@+id/button16"
        android:layout_width="95dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_orange_dark"
        android:text="NEXT"
        tools:text="@string/btn16" />

    <Button
        android:id="@+id/button15"
        android:layout_width="78dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_orange_dark"
        android:text="BACK"
        tools:text="@string/btn15" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="176dp"
        android:layout_toStartOf="@+id/editText15"
        android:text="Gender"
        android:textColor="@color/colorPrimaryDark" />

</RelativeLayout>